.bookpage {
  padding: 20px;
  border: solid;
  border-top-color: white;
  border-right-color: white;
  border-left-color: #c1c1c1;
  border-bottom-color: #c1c1c1;
  border-radius: 10px;
  border-width: 2px;
}

.booktemplate {
  font-family: $bvj;
  font-weight: bold;
 }

.booktemplate-label {
  font-family: $bvj;
  color: black;
  padding: 0px;
}

/* If the screen size is 601px wide or more, set the font-size of <div> to 80px */
@media screen and (min-width: 601px) {
  .booktemplate-variabelen {
    padding: 5px 0px 0px 180px;
  }

  .booktemplate-text {
    margin: 10px 0px 0px 0px;
    font-family: $bvj;
  }

  .bookpage-size {
    height: 500px;
    width: 500px;
    padding: 10px;
  }

  .book-info {
    margin-top: 70px;
    padding: 20px 0px 20px 35px;
    position:fixed;
    height:100vw;
    width:400px;
    top:0;
    left:0;
  }
  .bookpages-content {
  padding-left: 400px;
  // position: relative;
  }

  .booktemplate-s {
    font-size: 25px;
  }
}

/* If the screen size is 600px wide or less, set the font-size of <div> to 30px */
@media screen and (max-width: 600px) {

  .bookpage-size {
    height: 350px;
    width: 350px;
    padding: 5px;
  }
  .book-info {
    margin-top: 70px;
    padding: 20px;
    position: none;
  }
  .bookpages-content {
    padding-left: 1px;
  // position: relative;
  }

  .booktemplate-s {
    font-size: 22px;
  }
}

.book-info-mobile {
  margin-top: 50px;
  padding: 20px;
}

.booktemplate-page {
  padding: 0px 0px 10px 0px;
}

.question {
  font-family: $bvj;
  font-size: 16px;
}

.save-img {
  width: 50px;
  height: 50px;
  margin-top: -20px;
  background-image: url(<%= asset_path 'save-file-option.png'%>);
  background-repeat: no-repeat;
  background-position: center;
  background-size: 100% auto;
}

.edit-img:before {
  content: "I";
}
.edit-img {
  color: black;
  width: 25px;
  height: 25px;
  background-color: #FFCC33;
  line-height: 0px;
  padding-left: 6px;
  margin-top: -20px;
}
.save-text:before {
  content: "S";
}
.save-text {
  color: black;
  width: 25px;
  height: 25px;
  background-color: #FFCC33;
  line-height: 0px;
  text-align: center;
  margin-top: 0px;
}

.eedit-text:before {
  content: "T";
}

.edit-text {
  width: 30px;
  height: 30px;
  margin-top: -20px;
  padding: 4px;
  background-color: #FFCC33;
  border-radius: 50%;
}

.edit-text:hover {
  background-color: #FEBE00;
}

textarea.up {
  margin: -10px 10px 0px 30px !important;
}

.flex3 {
  display: flex;
  // flex-direction: column;
}

.flex-column-center {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.text-button {
  border-style: none;
  padding: 0px;
  background-color: white;
  text-align: left;
  margin: 0px 10px 0px 0px;
  cursor:url(<%= asset_path 'pencil-edit-button-32.png'%>),text;
}

.bottom-control{
  display:flex;
  justify-content: space-between;
  margin: 75px 0px 0px 0px;
}
