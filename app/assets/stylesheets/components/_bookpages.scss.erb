.bookpage {
  padding: 20px;
  border: solid;
  border-top-color: white;
  border-right-color: white;
  border-left-color: #c1c1c1;
  border-bottom-color: #c1c1c1;
  border-radius: 10px;
  border-width: 2px;
}

/* If the screen size is 601px wide or more, set the font-size of <div> to 80px */
@media screen and (min-width: 601px) {

  .bookpage-size {
    height: 500px;
    width: 500px;
    padding: 10px;
  }

  .book-info {
    margin-top: 70px;
    padding: 20px 0px 20px 35px;
    position:fixed;
    height:100vw;
    width:400px;
    top:0;
    left:0;
  }
  .bookpages-content {
  padding-left: 400px;
  // position: relative;
  }
}

/* If the screen size is 600px wide or less, set the font-size of <div> to 30px */
@media screen and (max-width: 600px) {


  .bookpage-size {
    height: 350px;
    width: 350px;
    padding: 5px;
  }
  .book-info {
    margin-top: 70px;
    padding: 20px;
    position: none;
  }
  .bookpages-content {
    padding-left: 1px;
  // position: relative;
  }
}

.book-info-mobile {
  margin-top: 50px;
  padding: 20px;
}

.booktemplate-page {
  padding: 35px 0px 10px 0px;
}

.booktemplate {
  font-family: $bvj;
  font-size: 36px;
  color: rgba(0, 0, 0, 0.5)
}

.question {
  font-family: $bvj;
  font-size: 16px;
}

.save-img {
  width: 50px;
  height: 50px;
  margin-top: -20px;
  background-image: url(<%= asset_path 'save-file-option.png'%>);
  background-repeat: no-repeat;
  background-position: center;
  background-size: 100% auto;
}

.edit-img:before {
  content: "I";
}
.edit-img {
  color: black;
  width: 25px;
  height: 25px;
  background-color: #FFCC33;
  line-height: 0px;
  padding-left: 6px;
  margin-top: -20px;
}
.save-text:before {
  content: "S";
}
.save-text {
  color: black;
  width: 25px;
  height: 25px;
  background-color: #FFCC33;
  line-height: 0px;
  padding-left: 6px;
  margin-top: 0px;
}

.edit-text:before {
  content: "T";
}

.edit-text {
  color: black;
  width: 25px;
  height: 25px;
  background-color: #FFCC33;
  line-height: 0px;
  padding-left: 6px;
}

.edit-text:hover {
  background-color: #FEBE00;
}

textarea.up {
  margin: -5px 0px 0px 0px !important;
}

