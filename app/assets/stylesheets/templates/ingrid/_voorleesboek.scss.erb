.page-size-voorleesboek-ingrid {
  width: 330px;
  height: 225px;
  padding: 20px 20px 10px 20px;
  background: white;
  margin: 0px 5px 0px 5px;
}

.content-voorleesboek-ingrid-p1 {
  height: 100%;
  background: center no-repeat url(<%= asset_path 'Afbeelding-1.jpg'%>);
  background-size: 100% auto;
  display: flex;
  align-items: center;
  justify-content: center;
}

.content-voorleesboek-ingrid-p1-indic {
  height: 100%;
  background: center no-repeat url(<%= asset_path 'Afbeelding-1.jpg'%>);
  background-size: 90% auto;
  display: flex;
  align-items: center;
  justify-content: center;
}

.tekstbox-voorleesboek-ingrid-p1 {
  text-align: center;
  margin-top: -35px;
}

.content-voorleesboek-ingrid {
  width: 290px;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  font-size: 18px;
}

.content-voorleesboek-ingrid-indic-blank {
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}


.content-voorleesboek-ingrid-indic {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}

.front-page {
  font-family: $bvj;
  font-size: 25px;
}

.left-page {

}

.right-page {

}

.page-front-button-ingrid {
  width: 330px;
  margin: 0px 5px 0px 0px;
  padding: 20px 0px 0px 0px;
}

.page-front-button-ingrid > button {
  float: right;
}

.dummy-page {
  width: 330px;
  height: 225px;
  background: none;
  text-align: center;
  padding-top: 60px;
}

.page-size-voorleesboek-ingrid.front {
  margin: 0px 5px 0px 0px;
}

.tekstbox-voorleesboek-ingrid {
  height: 50px;
  text-align: left;
  overflow: hidden;
}

.img-voorleesboek-ingrid {
  height: 85px;
  padding: 0px 0px 0px 0px;
}

/* If the screen size is 601px wide or more, set the font-size of <div> to 80px */
@media screen and (min-width: 601px) {
  .front-page {
    font-family: $bvj;
    font-size: 25px;
  }

  .content-voorleesboek-ingrid-indic {
    font-size: 7px;
  }

  .tekstbox-voorleesboek-ingrid-p1-indic {
    text-align: center;
    margin-top: -10px;
  }

  .tekstbox-voorleesboek-ingrid-indic {
    margin: 5px 0px 5px 0px;
    max-width: 104px;
    font-size: 6px;
    text-align: left;
  }

  .tekstbox-voorleesboek-ingrid-indic span {
    padding: 0px;
  }

  .img-voorleesboek-ingrid-indic {
    height: 33px;
    padding: 0px 0px 0px 0px;
 }

}

/* If the screen size is 600px wide or less, set the font-size of <div> to 30px */
@media screen and (max-width: 600px) {
  .front-page {
    font-family: $bvj;
    font-size: 16px;
  }

  .content-voorleesboek-ingrid-indic {
    font-size: 3px;
  }

  .tekstbox-voorleesboek-ingrid-p1-indic {
    text-align: center;
    margin-top: -7px;
  }

  .tekstbox-voorleesboek-ingrid-indic {
    margin: 4px;
    font-size: 3px;
    text-align: left;
  }

  .tekstbox-voorleesboek-ingrid-indic span {
    padding: 0px;
  }

  .img-voorleesboek-ingrid-indic {
    height: 15px;
    padding: 0px 0px 0px 0px;
  }
}

span {
  padding: 0px 3px 0px 3px;
}
