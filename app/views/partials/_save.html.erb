<div class="modal" id="savebook" tabindex="-1" role="dialog" aria-labelledby="savebook" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        Voer emailadres in om boekje op te slaan.
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">

        <%= simple_form_for(@book, url: book_path, method: :patch , remote: true) do |f| %>
          <%= f.error_notification %>
          <%= f.input :email, placeholder: "email", id: "epost", label: false, input_html: { required: true } %>
          <%= f.button :submit, "Bewaar", id: "ttt", class: "knop vooruit" %>
        <% end %>
        <!-- <div id="ttt" class="knop vooruit">hhhh</div> -->
      </div>
      <div class="modal-footer">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
    </div>
  </div>
</div>
