<div class="container-fluid booktemplate-page">
  <div class="row-fluid">
    <div class="col-md-6 col-xs-12 hidden-sm hidden-md hidden-lg">
      <div class="stepscontrol-balk stepscontrol-balk-s">
       <div class="control-button-flex">
        <div class="control-button control-button-s disabled">1</div>
        <div class="button-label">
          voor wie?
        </div>
        </div>
       <div class="control-button-flex">
        <input type="button" value="2" onclick="history.back()" class="control-button control-button-s terug fix">
        <div class="button-label">
          boekje
        </div>
        </div>
       <div class="control-button-flex">
        <div class="control-button control-button-s nu">3</div>
        <div class="button-label">
          n.a.w.
        </div>
        </div>
       <div class="control-button-flex">
        <div class="control-button control-button-s vooruit">4</div>
        <div class="button-label">
          betalen
        </div>
        </div>
      </div>
    </div>
    <div class="col-md-6 col-xs-12">
      <p class="booktemplate">Jouw gegevens</p>
      <p>Vul je email-adres en wachtwoord in.
      Heb je nog niet eerder een boekje gekocht?</p>
      <div class="flex3">
      <%= link_to "Registreer", new_user_registration_path, class: "knop nu" %>
      </div>
    </div>
    <div class="col-md-6 col-xs-12 hidden-xs">
      <div class="stepscontrol-balk stepscontrol-balk-s">
       <div class="control-button-flex">
        <div class="control-button control-button-s disabled">1</div>
        <div class="button-label">
          voor wie?
        </div>
        </div>
       <div class="control-button-flex">
        <input type="button" value="2" onclick="history.back()" class="control-button control-button-s terug fix">
        <div class="button-label">
          boekje
        </div>
        </div>
       <div class="control-button-flex">
        <div class="control-button control-button-s nu">3</div>
        <div class="button-label">
          n.a.w.
        </div>
        </div>
       <div class="control-button-flex">
        <div class="control-button control-button-s vooruit">4</div>
        <div class="button-label">
          betalen
        </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row-fluid">
    <div class="col-md-12 home1">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "email" }, label: false , placeholder: "Email adres" %>
          <%= f.input :password,
                      required: true,
                      input_html: { autocomplete: "current-password" }, label: false , placeholder: "Wachtwoord" %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "Log in", class: "knop nu" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
