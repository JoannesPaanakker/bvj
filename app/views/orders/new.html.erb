<div class="container-fluid booktemplate-page">
  <div class="row-fuid">
    <div class="col-xs-12 hidden-sm hidden-md hidden-lg stepscontrol-balk stepscontrol-balk-s">
      <%= render "partials/steps-4" %>
    </div>
    <div class="col-xs-12 col-sm-6 col-md-6">
      <div class="booktemplate-text box">
        <p class="booktemplate-s">
          Gegevens controleren.
        </p>
        <span>
        Overzicht van het bestelde product en klant- en aflevergegevens.


        </span>
      </div>
    </div>
    <div class="col-xs-12 col-sm-6 col-md-6 hidden-xs stepscontrol-balk stepscontrol-balk-s">
      <%= render "partials/steps-4" %>
    </div>
    </div>
  <div class="row-fluid flex4">


    <div class="col-xs-12 box-product">
      <div class="hidden">
          boek id: <%= @book.id %><br>
          booktemplate: <%= @book.booktemplate.HTMLPrefix %><br>
          boeknaam<%= @book.name %><br>
      </div>

        Vormgever: <%= @book.booktemplate.user.first_name %> <%= @book.booktemplate.user.last_name %><br>
        boeksoort: <%= @book.booktemplate.productsubtype.name %><br>
        <div class="flex1">
          <%= render "html-templates/step2/edited/#{@book.booktemplate.HTMLPrefix}_p1.html" %>
          <div>
          Aantal: <input type="number" class="input-aantal" value="1">
          <br>
          Per stuk: <span class="price"> € 12,50 </span>
          </div>
        </div>
        <div style="text-align: right;">
          Totaal: <span class="total">€ 12,50</span>
        </div>

    </div>
  </div>
</div>
<div class="container-fluid">
  <div class="row-fuid">
    <div class="flex4">
      <div class="col-xs-6 col-md-3 box-adresgegevens box-adresgegevens-s" style="margin-right: 10px">
        <div class="">
          <p class="gegevens gegevens-header">
            Klantgegevens.
          </p>
          <p class="gegevens gegevensregel">Bedrijf?</p>
          <p class="gegevens gegevensregel">T.a.v. </p>
          <p class="gegevens gegevensregel"></p>
          <p class="gegevens gegevensregel"></p>
          <p class="gegevens gegevensregel"></p>
          <br>
          <p class="gegevens gegevensregel"><%= %></p>
          <p class="gegevens gegevensregel"><%= %></p>
          <button class="knop nu">
            wijzigen
          </button>
        </div>
      </div>
      <div class="col-xs-6 col-md-3 box-adresgegevens box-adresgegevens-s"  style="margin-left: 10px">
        <div class="">
          <p class="gegevens gegevens-header">
            Aflevergegevens.
          </p>
          <%# if current_user.afleveradreshetzelfde %>
            <p class="gegevens gegevensregel">Bedrijf?</p>
            <p class="gegevens gegevensregel">T.a.v. <%#= current_user.first_name %> <%#= current_user.last_name %></p>
            <p class="gegevens gegevensregel"><%#= current_user.streetname %> <%#= current_user.streetnumber %> - <%#= current_user.number_extension %></p>
            <p class="gegevens gegevensregel"><%#= current_user.postalcode %><%#= current_user.city %></p>
            <p class="gegevens gegevensregel"><%#= current_user.country %></p>
            <br>
            <br>
            <br>
          <%# else %>
            <p class="gegevens gegevensregel">Bedrijf?</p>
            <p class="gegevens gegevensregel">T.a.v. <%#= current_user.geaddresseerde %></p>
            <p class="gegevens gegevensregel"><%#= current_user.streetname2 %> <%#= current_user.streetnumber2 %> <%#= current_user.number2_extension %></p>
            <p class="gegevens gegevensregel"><%#= current_user.postalcode2 %> <%#= current_user.city2 %></p>
            <p class="gegevens gegevensregel"><%#= current_user.country2 %></p>
            <br>
            <br>
            <br>
          <%# end %>
          <button class="knop nu">
            wijzigen
          </button>
        </div>
      </div>
    </div>
  </div>
</div>



