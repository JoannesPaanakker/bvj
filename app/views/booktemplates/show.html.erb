    <button class="knop hidden-xs"> laat zien</button>
    </div>
    <div class="col-md-6">
      <div class="stepscontrol-balk stepscontrol-balk-s">
        <div class="control-button control-button-s pijl">&#x003C</div>
        <div class="control-button control-button-s nu">1</div>
       <div class="control-button control-button-s vooruit">2</div>        <div class="control-button control-button-s vooruit">3</div>
        <div class="control-button control-button-s vooruit">4</div>
        <div class="control-button control-button-s vooruit">5</div>
        <div class="control-button control-button-s pijl">&#x003E</div>
      </div>
    </div>
    <div class="col-md-6">
      <%= @pagetemplates[0].name %><br>
      <%= render "html-templates/#{@pagetemplates[0].html}" %>
    </div>
  </div>
</div>

