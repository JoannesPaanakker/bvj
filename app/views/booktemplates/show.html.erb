<div class="book-info bookpage">
  Booktemplate
  <p><%= @booktemplate.name  %></p>
  <% @questions.each do |q| %>
    <%= q.question  %>?<br>
    Open vraag? <%= q.open %><br>
    <% q.answers.each do |a| %>
      <%= a.answer %><br>
    <% end %>
  <% end %>
</div>
<div class="container-fluid bookpages-content hidden-xs flow">
  <div class="row-fluid">
    <% @pagetemplates.each do |p| %>
      <%= link_to "#" do %>
        <div class="container-blok bookpage col-sm-12">
            <%= p.name %><br>
            <%= render "html-templates/#{p.html}" %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
<div class="hidden-sm hidden-md hidden-lg">
  <div class="mobile-blok home-page-blok">
    Booktemplate
    <p><%= @booktemplate.name  %></p>
  </div>
  <% @pagetemplates.each do |p| %>
    <%= link_to "#" do %>
      <div class="mobile-blok home-page-blok">
        <%= p.name %>
      </div>
    <% end %>
  <% end %>
</div>
