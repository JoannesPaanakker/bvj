          <li data-target="#myCarousel" data-slide-to="0" class="active car-indic">
            <div class="ci-content">
              <div class="ci-content-l">Caption</div>
              <div class="ci-content-l">Caption</div>
            </div>
          </li>
          <li data-target="#myCarousel" data-slide-to="1" class="car-indic">
            <div class="ci-content">
              <div class="ci-content-l">Caption</div>
              <div class="ci-content-l">Caption</div>
            </div>
          </li>
          <li data-target="#myCarousel" data-slide-to="2" class="car-indic">
            <div class="ci-content">
              <div class="ci-content-l">Caption</div>
                <div class="ci-content-l">
                  Caption<br>
                   <img id="ind3" src="<%= asset_path @booktexts[0].text5 %>" class="img-ic-3">
                </div>
            </div>
          </li>
          <li data-target="#myCarousel" data-slide-to="3" class="car-indic">
            <div class="ci-content">
              <div class="ci-content-l">Caption</div>
              <div class="ci-content-l">Caption</div>
            </div>
          </li>
        <% else %>
          <li data-target="#myCarousel" data-slide-to="0" class="active car-indic tst5"></li>
          <li data-target="#myCarousel" data-slide-to="1" class="car-indic tst6"></li>
          <li id="ind3" data-target="#myCarousel" data-slide-to="2" class="car-indic tst7"></li>
