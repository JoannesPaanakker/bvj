<div class="container-fluid booktemplate-page">
  <div class="row-fuid">
    <div class="col-md-6">
      <p class="booktemplate">Bekijk het boek</p>
      <span>In de pagina staat aangegeven waar je aanpassingen kunt maken.</span>
      <input type="hidden" id="btid" data-tst="jaaa" value="<%= @booktexts[0].id %>">
    </div>
    <div class="col-md-6">
      <div class="stepscontrol-balk stepscontrol-balk-s">
        <div class="control-button control-button-s pijl">&#x003C</div>
        <div class="control-button control-button-s terug">1</div>
        <div class="control-button control-button-s nu">2</div>
        <div class="control-button control-button-s vooruit">3</div>
        <div class="control-button control-button-s vooruit">4</div>
        <div class="control-button control-button-s vooruit">5</div>
        <div class="control-button control-button-s pijl">&#x003E</div>
      </div>
    </div>
  </div>

<div class="row-fluid">
  <div class="col-md-12 carousel" >

<!--  carousel -->

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="false">

  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
    <li data-target="#myCarousel" data-slide-to="1" class="tst"></li>
    <li data-target="#myCarousel" data-slide-to="2"></li>
    <li data-target="#myCarousel" data-slide-to="3"></li>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner">
      <div class="item active">
        <div class="item1">
        <%= render "html-templates/step2/edited/#{@pagetemplates[0].html}" %>
        </div>
      </div>
    <% @count = @pagetemplates.count %>
    <% @ind = 1 %>
    <% until @ind == @count %>
      <div class="item">
        <div class="item1">
        <%= render "html-templates/step2/edited/#{@pagetemplates[@ind].html}" %>
        </div>
      </div>
      <% @ind +=1 %>
    <% end %>

  </div>

  <!-- Left and right controls -->
  <a class="left carousel-control" href="#myCarousel" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#myCarousel" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

  </div>
</div>

<!-- end carousel -->

  <div class="row-fuid">
    <div class="col-md-12">
    </div>
  </div>
  <div class="row-fuid">
    <div class="col-md-12">
      <div class="flex1">
        <%= link_to "TERUG", book_path(@book.id), class: "knop terug" %>
        <% if user_signed_in? %>
          <%= link_to "KOOP", new_order_path, class: "knop nu" %>
        <% else %>
          <%= link_to "KOOP", new_user_registration_path, class: "knop nu" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
