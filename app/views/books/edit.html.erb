<div class="container-fluid booktemplate-page">
  <div class="row-fuid">
    <div class="col-md-6 hidden-sm hidden-md hidden-lg">
      <div class="stepscontrol-balk stepscontrol-balk-s">
        <div class="control-button-flex">
          <input type="button" value="1" onclick="history.back()" class="control-button control-button-s terug fix">
        </div>
        <div class="control-button-flex">
          <div class="control-button control-button-s nu">2</div>
        </div>
        <div class="control-button-flex">
          <% if user_signed_in? %>
          <%= link_to "3", new_order_path(:book_id => @book.id), class: "control-button control-button-s vooruit" %>
          <% else %>
            <%= link_to "3", new_user_registration_path(:book_id => @book.id), class: "control-button control-button-s vooruit" %>
          <% end %>
        </div>
        <div class="control-button-flex">
            <div class="control-button control-button-s disabled">4</div>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <div class="booktemplate-text box">
        <p class="booktemplate booktemplate-s">
          Bekijk het boek
        </p>
        <span><em>
          Daar waar aangegeven kun je beeld en tekst aanpassen.</em>
        </span>
      </div>
      <input type="hidden" id="btid" data-tst="jaaa" value="<%= @booktexts[0].id %>">
    </div>
    <div class="col-md-6 hidden-xs">
      <div class="stepscontrol-balk stepscontrol-balk-s">
        <div class="control-button control-button-s terug">
        1
        <span class="txt">
          VARIABELEN
        </span>
        </div>
        <div class="control-button control-button-s nu">
        2
        <span class="txt">
          INHOUD BOEK
        </span>
        </div>
        <% if user_signed_in? %>
          <%= link_to new_order_path(:book_id => @book.id), class: "control-button control-button-s vooruit" do %>
            3
            <span class="txt">
              ADRES
            </span>
          <% end %>
        <% else %>
          <%= link_to new_user_registration_path(:book_id => @book.id), class: "control-button control-button-s vooruit" do %>
            3
            <span class="txt">
              ADRES
            </span>
          <% end %>
        <% end %>
        <div class="control-button control-button-s disabled">
        4
        <span class="txt">
          BETALEN
        </span>
        </div>
      </div>
    </div>
  </div>

  <div class="row-fluid">
    <div class="col-md-8 col-sm-12 carousel" >
      <div id="myCarousel" class="carousel slide" data-ride="carousel" data-wrap="false" data-interval="false">
        <div class="carousel-inner">
          <div class="item active" id="page1">
            <div class="item1">
              <%= render "html-templates/step2/edited/#{@pagetemplates[0].html}" %>
            </div>
          </div>
          <% @count = @pagetemplates.count %>
          <% @ind = 1 %>
          <% until @ind == @count %>
            <div class="item" id="page<%= @ind +1 %> ">
              <div class="item1">
              <%= render "html-templates/step2/edited/#{@pagetemplates[@ind].html}" %>
              </div>
            </div>
            <% @ind +=1 %>
          <% end %>
        </div>
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
          <span class="glyphicon glyphicon-chevron-left"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
          <span class="glyphicon glyphicon-chevron-right"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>
     <!-- start img app -->
    <div class="col-md-4 col-sm-12">
      <%= render 'partials/img-select' %>
      <div id="no-image" style="display: block">
        <div class="catlist-flex imglist-categories-box">
          <% @imagecategories.each do |ic| %>
            <div class="category-unavailable-button"><%= ic.name  %>
            </div>
          <% end %>
        </div>

        <div class="imglist-flex imglist-images-box">
          <div class="booktemplate-text">
            <span>
              <em>
                Er zijn geen alternatieve afbeeldingen beschikbaar.
              </em>
            </span>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

